@model IEnumerable<MovieDto>

@{
    ViewBag.Title = "Index of Movie";
}

<h1>Index</h1>

<p>
    @* <a asp-action="Create">@BasicRes.New</a>*@
    @* <a href="/Movies/Create" method="post" title="@BasicRes.New">@BasicRes.New</a> *@
   
    @*<form asp-action="Create">
        <input class="btn btn-sm btn-dark" type="submit" value="@BasicRes.New" />
    </form>*@
    <div class="row">
        <div class="col-md-1">
            <form method="post" action="\Movies\Create">
                @Html.AntiForgeryToken()
                <input class="btn btn-sm btn-dark" type="submit" value="@BasicRes.New" />
            </form>
        </div> 
         <div class="col-md-11">
             
             <form class="form-group row" method="get" href="\Movies\Index">
                <input class="col-md-8" type="text" placeholder="Suche nach Titel" name="searchText" />
                <input class="col-md-1" type="text" placeholder="@BasicRes.MediumType" name="mediumTypeCode" />
                <input class="col-md-1" type="text" placeholder="Skip" name="skip" />
                <input class="col-md-1" type="text" placeholder="Take" name="take" />
                <button type="submit" class="btn btn-primary col-md-1" value="Suche"><i class="fa fa-search" aria-hidden="true" title="Suche"></i></button>
            </form>
         </div>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @BasicRes.Genre
            </th>
            <th>
                @BasicRes.MediumType
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediumTypeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">@BasicRes.Edit</a>*@
                <a class="btn btn-sm btn-primary fa fa-pencil" title="@BasicRes.Edit" href="/Movies/Edit/@item.Id"></a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="fa fa-info-circle btn btn-sm btn-primary" title="Details"></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-trash btn btn-sm btn-danger" title="@BasicRes.Delete"></a>
            </td>
        </tr>
}
    </tbody>
</table>
